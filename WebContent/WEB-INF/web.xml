<error-page>
    <!-- Uncaught exception -->
    <error-code>401</error-code>
    <location>/rdscontroller?currentpage=login</location>
</error-page>
<error-page>
    <!-- Uncaught exception -->
    <error-code>403</error-code>
    <location>/rdscontroller?currentpage=login</location>
</error-page>   
   
<error-page>
    <!-- Uncaught exception -->
    <error-code>500</error-code>
    <location>/rdscontroller?currentpage=alerts</location>
</error-page> 
