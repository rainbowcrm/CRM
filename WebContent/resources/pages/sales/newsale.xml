<?xml version="1.0" encoding="UTF-8"?>
<Page id = "newDiv" showinFrame ="true" title ="New Sales | Rainbow CRM" Object = "com.rainbow.crm.sales.model.Sales" 
Controller = "com.rainbow.crm.sales.controller.SalesController">
<Template type= "Transaction"  name = "TransactionTemplate"></Template>
<Forwards>
<Forward key ="CANCEL">rdscontroller?page=sales</Forward>
<Forward key ="SAVE">sales</Forward>
</Forwards>
<IncludeJS>./resources/js/RadsLib.js</IncludeJS>
<IncludeJS>./scripts/CRMGeneral.js</IncludeJS>
<IncludeJS>./scripts/sales/SalesFunc.js</IncludeJS>
<AjaxGroups>
<AjaxGroup service ="customerSearch">
<requestElements >
<requestElement key = "Phone">txtPhone</requestElement>
<requestElement key = "Email">txtEmail</requestElement>
</requestElements>
<responseElements>
<responseElement key = "Phone">txtPhone</responseElement>
<responseElement key = "Email">txtEmail</responseElement>
<responseElement key = "FullName">txtCustomerName</responseElement>
</responseElements>
</AjaxGroup>
<AjaxGroup service ="itemSearch">
<requestElements event = "">
<requestElement key = "Name">txtItName</requestElement>
<requestElement key = "Code">txtCode</requestElement>
</requestElements>
<responseElements>
<!-- <responseElement key = "Name" >txtItem</responseElement>  -->
<responseElement key = "Code">txtCode</responseElement>
<responseElement key = "Name">txtItName</responseElement>
<responseElement key = "RetailPrice">txtPrice</responseElement>

</responseElements>
</AjaxGroup>

</AjaxGroups>

<Elements>
<UIForm Id ="cust" method = "POST" > 
<Section type ="topBar"></Section> 
<Section type ="leftsideBarApp"></Section>
<CoreSection>
<ErrorSection>
</ErrorSection>
<Section type ="header">
	<Element label = "" type = "UIHidden" Id = "hdnVersion" property ="ObjectVersion" />
	<Element label = ""  type = "UIHidden" Id = "hdnUserID"  property ="Id" />
	<Element label = "Division"  type = "UIList" Id = "lstInvDivision"  isMandatory="true" property ="Division.Id" >
	<options populator =  "getAllDivisions"> 
	</options>
	</Element>

	<Element label = "Bill_No"  type = "UIText" Id = "txtBillNo"  isMandatory="true"  readonly="true" property ="billNumber" />
	<Element label = "Date"  type = "UIDate" Id = "txtDate" isMandatory="true"  property ="salesDate" />
	<Element label = ""  type = "UILabel" Id = "lblCustTitle"   value ="Customer" />
	<Element label = ""  type = "UILabel" Id = "lblFree1"  style="bigTitle" value ="" />
	<Element label = ""  type = "UILabel" Id = "lblFree2"  style="bigTitle" value ="" />
	<Element label = "Phone"  type = "UIText" Id = "txtPhone"   property ="Customer.Phone" />
	<Element label = "Email"  type = "UIText" Id = "txtEmail"   property ="Customer.Email" />
	 <Element label = "Name"  type = "UILookupText"  Id = "txtCustomerName"  isMandatory="true" property ="Customer.FullName" showLookupAsDialog="true" dialogId="dlgComp"
  dialogStyle ="dialogStyle" frameStyle="lookupFrameStyle" >
	 <lookupType>customer</lookupType>
	 <height>300</height>
	 <width>290</width>
	</Element>
	<Element caption = "New_Customer"  type = "UIButton"    Id = "btnNewCustomer"  style="button" onClickJS = "showLookupDialog('newcustDL',this);"  />
	<Element type ="UIDialog" Id = "newcustDL" style= "widepopup" >
	<Element type = "UIIFrame" src ="./rdscontroller?page=quickcustomeradd" style ="lookupFrameStyle">
	</Element>
	</Element>
</Section>
<Section type ="brk1"/>
<Section type ="detail">
<Element label = ""  type = "UILabel" Id = "lblLineitTitle"  style="bigTitle" value ="Line_Items" />
<Element type = "UITable" rows = "1" cols = "7" style = "grid" applyStyleonChildren ="true" Id  ="tblTrans" property ="SalesLines[]" >
<Element type = "UITableHead">
 <Element type = "UITableRow">

<Element type ="UITableCol" width = "10%" ><Element label = ""  type = "UILabel" Id = "lblCode" value ="Code" /></Element>
<Element type ="UITableCol" width = "25%" ><Element label = ""  type = "UILabel" Id = "lblCode" value ="Item" /></Element>
<Element type ="UITableCol" width = "18%"><Element label = ""  type = "UILabel" Id = "lblCode" value ="Comments" /></Element>
<Element type ="UITableCol" width = "8%"><Element label = ""  type = "UILabel" Id = "lblCode" value ="Price" /></Element>
<Element type ="UITableCol" width = "8%"><Element label = ""  type = "UILabel" Id = "lblCode" value ="Qty" /></Element>
<Element type ="UITableCol" width = "8%"><Element label = ""  type = "UILabel" Id = "lblCode" value ="Discount" /></Element>
<Element type ="UITableCol" width = "8%"><Element label = ""  type = "UILabel" Id = "lblCode" value ="Total" /></Element>
<Element type ="UITableCol" width = "5%"> </Element>
</Element>  
 </Element>
<Element type = "UITableRow"  dataType = "com.rainbow.crm.sales.model.SalesLine" rendered = "!Object.getVoided">

<Element type ="UITableCol" width = "10%"><Element label = ""  type = "UIText" Id = "txtCode" size  = "10" property ="Item.Code" /> </Element>
<Element type ="UITableCol" width = "25%"><Element label = ""  type = "UILookupText"  Id = "txtItName"  size  = "40" property ="Item.Name" showLookupAsDialog="true" dialogId="dlgIt"
  dialogStyle ="dialogStyle" frameStyle="lookupFrameStyle" >
	 <lookupType>item</lookupType>
	 <height>300</height>
	 <width>290</width>
</Element>
 </Element>
<Element type ="UITableCol" width = "18%"><Element label = ""  type = "UIText" Id = "txtLineCo"  property ="Comments" size = "30" />  </Element>
<Element type ="UITableCol" width = "8%"><Element label = ""  type = "UIText" Id = "txtPrice"  property ="unitPrice"  isNumeric= "true" size = "10" />  </Element>
<Element type ="UITableCol" width = "8%"><Element label = ""  type = "UIText" Id = "txtQty"  property ="Qty"   isNumeric= "true" 
 focusoutJS = "calculateAll()" size = "10"/>  </Element>
<Element type ="UITableCol" width = "8%"><Element label = ""  type = "UIText" Id = "txtlineDisc"  property ="lineTotalDisc"  isNumeric= "true" size = "10" />  </Element>
<Element type ="UITableCol" width = "8%"><Element label = ""  type = "UIText" Id = "txtlineTotal"  property ="lineTotal" size = "10"  readonly="true" />  </Element>

<Element type ="UITableCol" width = "5%">
	<Element caption = "+"  type = "UIButton" Id = "btnAddRow"    fixedAction ="FixedAction.ACTION_ADDTABLEROW"  fixedActionParam =  "this"/>
	<Element caption = "-"  type = "UIButton" Id = "btnDelRow"    fixedAction ="FixedAction.ACTION_DELETETABLEROW"  fixedActionParam =  "this"/>
</Element>
</Element>
</Element>
</Section>
<Section type ="brk2"/>
<Section type ="footer">
<Element label = "Discount"  type = "UIText" Id = "txtDiscount"   focusoutJS = "calculateAll()" property ="totalDisc"  isNumeric= "true" size = "10" />  
<Element label = "Tax_Percent"  type = "UIText" Id = "txtTaxPerc"   focusoutJS = "calculateAll()"  property ="taxPerc" isNumeric= "true" size = "10" />
<Element label = "Tax_Amount"  type = "UIText" Id = "txtTaxAmt"   property ="taxAmount"  readonly="true" isNumeric= "true" size = "10" />
<Element label = "Comments"  type = "UITextArea" Id = "txtComm"  property ="comments" >
	 <rows>5</rows> <cols>30</cols>
</Element>
<Element label = ""  type = "UICheckBox" Id = "chkCredit"   property ="creditSales" >
	<options> 
	  <option key ="true"> Credit_Sales </option>
	 </options>
</Element>
<Element label = "Total_Amount"  type = "UIText" Id = "txtTotalAmt"   property ="netAmount" isNumeric= "true" readonly="true" size = "10" />
</Section>
<Section type ="brk3"/>
</CoreSection>
<Section type ="summary">
</Section>
<Section type ="copyRightSection"/>
</UIForm>
</Elements>
</Page>
